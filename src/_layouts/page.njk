{% include "header.njk" %}
<div class="flex flex-col h-screen justify-between">
  <!-- Header -->
<!--Waves Container-->
<div>

{{ '/src/assets/svg/wave.svg' | svgContents | safe }}

</div>
<!--Waves end-->
  <header>
    <div class="w-3/4 m-auto max-w-5xl border-l-1 border-r-1 border-base-200 bg-linear-to-b to-base-100/85 from-base-200/85">
{% include "navbar.njk" %}
    </div>
  </header>

  <!-- Main Content -->
  <main>
    <div class="w-3/4 m-auto max-w-5xl border-l-1 border-r-1 border-base-200 min-h-[85vh] bg-base-100/85">

      {% if hero %}
      <div class="relative rounded-lg overflow-hidden bg-base-200 mx-4">

        <img 
        src="{{ hero }}"
        alt="{{ title }}"
        class="w-full h-96 object-cover "
        eleventy:widths="1024"
        />
        <div class="absolute inset-0 flex items-center justify-center">
          <h1 class="text-4xl font-bold text-neutral px-8 bg-neutral-50/50 mx-8 rounded-sm p-2">{{ title }}</h1>
        </div>
      </div>
      {% else %}
      <h1 class="text-4xl font-bold px-4 pt-4">{{ title }}</h1>
      {% endif %}


      <!-- main content -->
      <div class="max-w-5xl mx-auto my-4 relative">

        <div class="{% if prose %}prose {% endif %}prose-lg mb-6 px-4 ">
          {{ content | safe }}
        </div>

      {% if sidebar %}
        <div class="absolute top-18 right-4 ">
      {% include "sidebar.njk" %}
      </div>
      {% endif %}        

      </div>


    </div>
  </main>

  <!-- Footer -->
  <div class="w-3/4 max-w-5xl mx-auto px-4 border-r-1 border-l-1 bg-linear-to-t border-base-200 to-base-100 from-base-200">
  {% include "footer.njk" %}
  </div>

</div>


        
</body>
</html>